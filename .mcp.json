{
    "mcpServers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },
        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "/Users/riskihajar/github/filament4-starter"
            }
        },
        "playwright": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-playwright"
            ],
            "env": {
                "PLAYWRIGHT_BROWSERS_PATH": "./.playwright-browsers",
                "PLAYWRIGHT_CHROME_EXECUTABLE_PATH": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
            }
        }
    }
}